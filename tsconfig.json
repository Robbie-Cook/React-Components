{
  "include": [
    "./src/**/*",
  ],
  "exclude": ["./src/stories", "./dist/**/*", "node_modules/**/*",],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipDefaultLibCheck": true,
    "listFiles": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2015"]
  }
}
