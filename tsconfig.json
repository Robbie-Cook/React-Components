{
  "compilerOptions": {
    "baseUrl": "./src",
    "declarationDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src",
    "outDir": "./dist/",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2015"]
  }
}
